<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.example.joek.parallaxeffect.ScrollableImageView
        android:id="@+id/layerLevelOne"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/asset_one"
        custom:setPercentVelocity="10"/>

    <com.example.joek.parallaxeffect.ScrollableImageView
        android:id="@+id/layerLevelTwo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/asset_two"
        custom:setPercentVelocity="20"/>

    <com.example.joek.parallaxeffect.ScrollableImageView
        android:id="@+id/layerLevelThree"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/asset_three"
        custom:setPercentVelocity="30"/>


    <ProgressBar
        android:id="@android:id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>
